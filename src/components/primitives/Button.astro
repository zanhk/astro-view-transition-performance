---
import Link, { type Props as LinkProps } from "@/components/primitives/Link.astro";

export type Button = LinkProps & {
	title?: string;
};

const { ...props } = Astro.props as LinkProps;

const computedProps = {
	...props,
	tag: "button",
} as LinkProps;
---

<Link {...computedProps}><slot /></Link>
