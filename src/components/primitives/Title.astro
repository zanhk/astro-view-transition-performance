---
interface Props {
	level?: 1 | 2 | 3 | 4 | 5 | 6;
	tag?: 1 | 2 | 3 | 4 | 5 | 6;
	class?: string;
	[key: string]: unknown;
}

let { level = 2, tag, class: className, ...rest } = Astro.props as Props;

tag = tag ?? level;

const Element = `h${tag}` as const;
---

<Element
	class:list={[
		level === 1 && "sm:text-6xl font-medium text-5xl xl:text-8xl",
		level === 2 && "sm:text-4xl text-3xl xl:text-5xl",
		level === 3 && "text-2xl md:text-3xl",
		level === 4 && "text-xl md:text-2xl",
		level === 5 && "text-lg md:text-xl",
		level === 6 && "text-lg md:text-xl",
		className,
	]}
	{...rest}>
	<slot />
</Element>
